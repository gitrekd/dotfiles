[module/updates]
type = custom/script
exec = $HOME/.bin/updates.sh
interval = 120
format-background = ${colors.red}
format-foreground = ${colors.background}
format-padding = 2
click-left = urxvt -e update
 
[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
format-background = ${colors.background}
format-underline = ${colors.background}
format-padding = 2
label =   %percentage%


[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6601
interval = 2
 
format-online =<icon-prev> <icon-stop> <toggle>  <label-time>  <label-song>
[module/spotify]
type = custom/script
exec = BLOCK_INSTANCE=spotify $HOME/.bin/mediaplayer
label =   %output:0:30:...%
format-foreground = #aacf00
format-background = #80aacf00
format-underline = #aacf00
format-padding = 2
interval = 5
exec-if = pgrep -x spotify
 
[module/mediaplayer]
type = custom/script
exec = BLOCK_INSTANCE=DeaDBeeF $HOME/.bin/mediaplayer
